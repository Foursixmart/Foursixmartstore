    <script>
        document.getElementById('orderForm').addEventListener('submit', function(event) {
            event.preventDefault();
            
            // Mendapatkan nilai dari input form
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const item = document.getElementById('item').value;
            const notes = document.getElementById('notes').value;

            // Membentuk pesan yang akan dikirim via WhatsApp
            const message = `Hai *Foursixmart* Saya ingin Order\nNama: ${name}\nNo Whatsapp: ${phone}\nItem: ${item}\nKeterangan: ${notes}`;

            // Membentuk URL WhatsApp
            const whatsappURL = `https://api.whatsapp.com/send?phone=083877803504&text=${encodeURIComponent(message)}`;

            // Membuka URL di tab baru
            window.open(whatsappURL, '_blank');
        });
    </script>
